@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Trang Chủ";
    var listProducts = (List<DAL.EF.SANPHAM>)ViewBag.Products;
}
<html>
<body>
    <div class="row">
        <div class="col-lg-3">
            @{ Html.RenderAction("ProductCategory", "Product");}
         </div>
        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/Images/1.jpg" style="height:350px;width:900px;" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Images/2.jpg" style="height:350px;width:900px;" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Images/3.jpg" style="height:350px;width:900px;" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            </div>
        <di v class="col-lg-12">
            <div class="row">
                @foreach (var item in listProducts)
                {
                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.Id;
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="@url"><img class="card-img-top" src="~/Images/@item.ImageName" alt="" style="height:200px;width:320px;"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@url" style="color:black;">@item.Name</a>
                                </h4>
                                <h5>@item.Price VND</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                <h5><a href="@url" style="color:black;">Chi Tiết Sản Phẩm</a></h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->
        </div>
    </div>

</body>
</html>