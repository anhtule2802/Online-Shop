@model PagedList.IPagedList<DAL.EF.NGUOIDUNG>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản Lý Account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Account</h2>
<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>UserName</td>
                    <td>Role</td>
                    <td>Status</td>
                    <td>Duyệt</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Username</td>
                        <td>@item.Role</td>
                        <td>@item.Status</td>
                        <td><a href="/update-account?id=@item.Id">Duyệt Tài Khoản</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-12" style="text-align:center">
            <button class="btn btn-dark" style="height:35px;margin-bottom:10px;">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</button>
        </div>
    </div>
</div>

