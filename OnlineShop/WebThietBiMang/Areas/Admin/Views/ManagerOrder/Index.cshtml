@model PagedList.IPagedList<DAL.EF.HOADON>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản Lý Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Đơn Hàng</h2>
<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>ID Hóa Đơn</td>
                    <td>ID Người Dùng</td>
                    <td>Tên Người Nhận</td>
                    <td>Số Điện Thoại</td>
                    <td>Địa Chỉ</td>
                    <td>Email</td>
                    <td>Status</td>
                    <td>Duyệt Đơn Hàng</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.OrderID</td>
                        <td>@item.UserID</td>
                        <td>@item.ShipName</td>
                        <td>@item.ShipMobile</td>
                        <td>@item.ShipAddress</td>
                        <td>@item.ShipEmail</td>
                        <td>@item.Status</td>
                        <td><a href="/update-order?id=@item.OrderID">Duyệt Đơn Hàng</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-12" style="text-align:center">
            <button class="btn btn-dark" style="height:35px;margin-bottom:10px;">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</button>
        </div>
    </div>
</div>
